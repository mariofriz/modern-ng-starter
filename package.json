{
  "name": "modern-ng-starter",
  "version": "0.1.0",
  "description": "angularjs starter kit with a modern set of tools",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "test": "jest",
    "dev": "webpack-dev-server --open --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint ./src/**/*.js",
    "i18n": "angular-gettext-cli --files \"./src/**/*.@(js|html)\" --exclude \"**/*.spec.js\" --dest src/i18n/translations.pot --marker-name i18n"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariofriz/modern-ng-starter.git"
  },
  "keywords": [
    "angularjs",
    "starter-kit",
    "es6"
  ],
  "author": "Mario Friz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mariofriz/modern-ng-starter/issues"
  },
  "homepage": "https://github.com/mariofriz/modern-ng-starter#readme",
  "dependencies": {
    "angular": "1.6.10",
    "angular-gettext": "2.3.10",
    "angular-route": "1.6.10",
    "ng-bus": "0.0.1"
  },
  "devDependencies": {
    "angular-gettext-cli": "1.2.0",
    "angular-gettext-loader": "1.0.1",
    "angular-mocks": "1.6.10",
    "autoprefixer": "8.5.0",
    "babel-core": "6.26.0",
    "babel-jest": "22.4.3",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.6.1",
    "clean-webpack-plugin": "0.1.19",
    "css-loader": "0.28.11",
    "dotenv-webpack": "1.5.5",
    "eslint": "4.19.1",
    "eslint-config-standard": "11.0.0",
    "eslint-loader": "2.0.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.1.0",
    "file-loader": "1.1.11",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "jest": "22.4.3",
    "mini-css-extract-plugin": "0.4.0",
    "minimist": "1.2.0",
    "node-sass": "4.8.3",
    "optimize-css-assets-webpack-plugin": "4.0.0",
    "postcss-loader": "2.1.5",
    "sass-loader": "7.0.1",
    "style-loader": "0.21.0",
    "webpack": "4.6.0",
    "webpack-cli": "2.0.14",
    "webpack-dev-server": "3.1.3",
    "webpack-merge": "4.1.2"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "browserslist": [
    "defaults"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.js",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest",
      "^(?!.*\\.(js|jsx|json)$)": "<rootDir>/jest/fileTransform.js"
    }
  },
  "eslintIgnore": [
    "**/*.spec.js",
    "**/*.test.js",
    "dist/**/*"
  ]
}
